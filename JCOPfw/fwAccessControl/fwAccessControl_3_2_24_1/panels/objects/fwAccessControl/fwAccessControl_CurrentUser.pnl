    if (fwAccessControl_HasSystemAdminPrivilege(exceptionInfo,\"\",FALSE)) setupAllowed=TRUE;
  }
  
  dyn_string menu;
  dynAppend(menu,\"PUSH_BUTTON, Log in, 1, 1\");
  if (canLogout) dynAppend(menu,\"PUSH_BUTTON, Log out, 2, 1\");
