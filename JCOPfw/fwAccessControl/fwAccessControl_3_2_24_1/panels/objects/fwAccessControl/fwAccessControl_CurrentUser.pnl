  if (pwdChangeAllowed) {
    dynAppend(menu,\"PUSH_BUTTON, Change password, 3, \"+pwdChangeAllowed);
    dynAppend(menu,\"SEPARATOR\");
  //___________________________
  }
  dynAppend(menu,\"CASCADE_BUTTON, Administration, 1\"); 
  dynAppend(menu,\"SEPARATOR\");
  //___________________________
  dynAppend(menu,\"PUSH_BUTTON, Help, 99, 1\");
