	 'ALTER TABLE config_items_new MODIFY "ITEM_ID" NULL',
	 'ALTER TABLE config_items_new MODIFY "TAG_ID"  NULL',
	 'ALTER TABLE config_items_new MODIFY "DPT_ID"  NULL',
