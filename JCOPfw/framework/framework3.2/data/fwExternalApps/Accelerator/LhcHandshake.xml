<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="DIPConfig_ExternalApps">
	<subscription name="dip/acc/LHC/Handshake/LHC_ADJUST">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Adjust</name>
			<element>.Command</element>
			<description>Beam Adjust Handshake Command from LHC</description>
			<type>FwExternalAppsLhcHandshake</type>
			<tag>string</tag>
		</dpe>
		<overwrite>TRUE</overwrite>
	</subscription>
	<subscription name="dip/acc/LHC/Handshake/LHC_BEAMDUMP">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Dump</name>
			<element>.Command</element>
			<description>Beam Dump Handshake Command from LHC</description>
			<type>FwExternalAppsLhcHandshake</type>
			<tag>string</tag>
		</dpe>
		<overwrite>TRUE</overwrite>
	</subscription>
	<subscription name="dip/acc/LHC/Handshake/LHC_INJECTION">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Injection</name>
			<element>.Command</element>
			<description>Beam Injection Handshake Command from LHC</description>
			<type>FwExternalAppsLhcHandshake</type>
			<tag>string</tag>
		</dpe>
		<overwrite>TRUE</overwrite>
	</subscription>
  	<publication name="dip/{varExperiment}/LHC/Handshake/{varExperiment}_ADJUST" type="single">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Adjust</name>
			<element>.Response</element>
			<description>Beam Adjust Handshake Reply to LHC</description>
        </dpe>
		<buffer>0</buffer>
        <overwrite>TRUE</overwrite>
    </publication>
  	<publication name="dip/{varExperiment}/LHC/Handshake/{varExperiment}_DUMP" type="single">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Dump</name>
			<element>.Response</element>
			<description>Beam Dump Handshake Reply to LHC</description>
        </dpe>
		<buffer>0</buffer>
        <overwrite>TRUE</overwrite>
    </publication>
  	<publication name="dip/{varExperiment}/LHC/Handshake/{varExperiment}_INJECTION" type="single">
		<dpe>
			<name>ExternalApps/Accelerator/LHC/Handshake/Injection</name>
			<element>.Response</element>
			<description>Beam Injection Handshake Reply to LHC</description>
        </dpe>
		<buffer>0</buffer>
        <overwrite>TRUE</overwrite>
    </publication>
</configuration>